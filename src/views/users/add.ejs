<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cadastrar Usuário</title>
    <!-- Bootstrap CSS CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #1c1c1c;
        color: #e0e0e0;
        font-family: Arial, sans-serif;
      }

      input::placeholder {
        opacity: 0.5;
        color: #e0e0e077 !important;
      }

      h1 {
        text-align: center;
        margin-top: 30px;
        margin-bottom: 20px;
      }

      .container {
        background-color: #2b2b2b;
        padding: 30px;
        border-radius: 8px;
        max-width: 600px;
        margin: 0 auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      .form-group label {
        color: #e0e0e0;
      }

      .form-select {
        background-color: #1c1c1c;
        color: #e0e0e0;
      }

      .form-control {
        background-color: #1c1c1c;
        color: #e0e0e0;
        border: 1px solid #444;
      }

      .form-control:focus {
        background-color: #2b2b2b;
        color: #e0e0e0;
      }

      .btn-primary {
        background-color: #17a2b8;
        border-color: #17a2b8;
      }

      .btn-primary:hover {
        background-color: #138496;
        border-color: #138496;
      }

      @media (max-width: 768px) {
        .container {
          padding: 20px;
          max-width: 100%;
        }

        h1 {
          font-size: 1.8rem;
        }

        .btn-primary {
          width: 100%;
        }
      }

      @media (max-width: 576px) {
        h1 {
          font-size: 1.5rem;
        }

        .btn-primary {
          font-size: 0.9rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="mb-4">Cadastrar Usuário</h1>

      <% if (errorMessage) { %>
      <div class="alert alert-danger"><%= errorMessage %></div>
      <% } %>

      <form action="/users/save" method="post">
        <div class="form-group mb-3">
          <label for="name" style="color: white">Nome</label>
          <input
            placeholder="Digite o nome"
            type="text"
            class="form-control"
            id="name"
            name="name"
            required
          />
        </div>
        <div class="form-group mb-3">
          <label for="email">Email</label>
          <input
            placeholder="Digite o email"
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
          />
        </div>
        <div class="form-group mb-3">
          <label for="password">Senha</label>
          <input
            placeholder="Digite a senha"
            type="password"
            class="form-control"
            id="senha"
            name="senha"
            required
          />
        </div>
        <div class="form-group mb-3">
          <label for="confirm_password">Confirmar Senha</label>
          <input
            placeholder="Confirme a senha"
            type="password"
            class="form-control"
            id="confirm_senha"
            name="confirm_senha"
            required
          />
        </div>
        <div class="form-group mb-3">
          <label for="" class="mb-2">Papel</label>
          <select
            class="form-select mb-3"
            aria-label="Default select example"
            id="papel"
            name="papel"
          >
            <option value="1" selected>Usuário</option>
            <option value="2">Administrador</option>
            <option value="3">Senior</option>
            <option value="4">Junior</option>
            <option value="5">Estagiario</option>
          </select>
        </div>
        <div class="form-group mb-3 form-check">
          <input
            type="checkbox"
            class="form-check-input"
            id="ativo"
            name="ativo"
          />
          <label class="form-check-label" for="active">Ativo</label>
        </div>
        <button type="submit" class="btn btn-primary w-100">Cadastrar</button>
      </form>
    </div>

    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
