<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog Unicesumar - Lista de Usuarios</title>
    <!-- Bootstrap CSS CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="mb-4">Lista de Usuarios</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Papel</th>
            <th>Data de Cadastro</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% if (users.length > 0) { %> <% users.forEach(users => { %>
          <tr>
            <td><%= users.id %></td>
            <td><%= users.name %></td>
            <td><%= users.email %></td>
            <td><%= users.role %></td>
            <td><%= users.created_at %></td>
            <td>
              <a href="#" class="btn btn-primary">Editar</a>
              <a href="#" class="btn btn-danger">Excluir</a>
            </td>
            <td>
              <a href="#">editar</a>
              <form action="/users/delete/<%= users.id %>" method="post">
                <button type="submit" class="btn btn-primary">Excluir</button>
              </form>
            </td>
          </tr>
          <% }) %> <%} else {%>
          <tr>
            <td colspan="4">Nenhum usuario cadastrado</td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <a href="/users/add" class="btn btn-primary mt-3">Adicionar</a>
    </div>

    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
