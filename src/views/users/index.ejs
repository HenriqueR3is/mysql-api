<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog Unicesumar - Lista de Usuários</title>
    <!-- Bootstrap CSS CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #1c1c1c;
      }
      .container {
        max-width: 1000px;
        background-color: #2c2c2c;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
      }
      h1 {
        color: #e0e0e0;
        font-weight: bold;
        text-align: center;
        margin-bottom: 20px;
      }
      table {
        margin-top: 20px;
        table-layout: fixed;
        width: 100%;
      }
      .table thead th {
        background-color: #17a2b8;
        color: white;
        border: none;
        text-align: center;
      }
      .table tbody td {
        vertical-align: middle;
        color: #e0e0e0;
        text-align: center;
      }
      .actions {
        white-space: nowrap;
      }
      .btn-primary,
      .btn-danger,
      .btn-info {
        margin-right: 5px;
      }
      .btn-primary:hover,
      .btn-outline-info:hover {
        background-color: #17a2b8;
        color: white;
      }
      .btn-danger:hover,
      .btn-outline-danger:hover {
        background-color: #dc3545;
        color: white;
      }
      .btn-info:hover {
        background-color: #17a2b8;
        color: white;
      }
      .no-users {
        text-align: center;
        color: #e0e0e0;
        font-style: italic;
      }
      .add-user-btn {
        display: block;
        width: 100%;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <h1 class="mb-4">Lista de Usuários</h1>

      <table class="table">
        <thead>
          <tr>
            <th style="width: 5%">#</th>
            <th style="width: 20%">Nome</th>
            <th style="width: 25%">Email</th>
            <th style="width: 15%">Papel</th>
            <th style="width: 20%">Data de Cadastro</th>
            <th style="width: 15%">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% if (users.length > 0) { %> <% users.forEach(user => { %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <% if (user.papel == 1) { %>
            <td>Usuário</td>
            <%} else if (user.papel == 2) { %>
            <td>Administrador</td>
            <%} else if (user.papel == 3) { %>
            <td>Senior</td>
            <%} else if (user.papel == 4) { %>
            <td>Junior</td>
            <%} else { %>
            <td>Estagiario</td>
            <% } %>
            <td><%= new Date(user.created_at).toLocaleDateString() %></td>
            <td class="actions">
              <a
                href="/users/edit/<%= user.id %>"
                class="btn btn-outline-info btn-sm"
                >Editar</a
              >
              <form
                action="/users/delete/<%= user.id %>"
                method="post"
                style="display: inline-block"
              >
                <button type="submit" class="btn btn-outline-danger btn-sm">
                  Excluir
                </button>
              </form>
            </td>
          </tr>
          <% }) %> <% } else { %>
          <tr>
            <td colspan="6" class="no-users">Nenhum usuário cadastrado</td>
          </tr>
          <% } %>
        </tbody>
      </table>

      <a href="/users/add" class="btn btn-info add-user-btn mt-4"
        >Adicionar Novo Usuário</a
      >
    </div>

    <!-- Bootstrap JS CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
